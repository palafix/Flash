<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/context_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ID_CONTEXT_MENU_OPEN_PAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ID_CONTEXT_OPEN_PAGE"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="0.1"
        android:text="@string/open_new_activity"
        android:textSize="15sp"
        tools:ignore="ObsoleteLayoutParam" />

    <ImageView
        android:id="@+id/ID_CONTEXT_OPEN_PAGE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/ID_CONTEXT_SHARE_IMAGE"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:layout_weight="0.1"
        app:layout_constraintStart_toStartOf="@id/ID_CONTEXT_MENU_OPEN_PAGE"
        tools:ignore="ObsoleteLayoutParam"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/ID_CONTEXT_MENU_SHARE_IMAGE"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ID_CONTEXT_MENU_OPEN_PAGE"
        android:layout_marginTop="79dp"
        android:text="@string/share_image"
        android:textSize="15sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ID_CONTEXT_SHARE_IMAGE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ID_CONTEXT_MENU_SHARE_IMAGE"
        android:layout_marginStart="19dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ID_CONTEXT_MENU_COPY_IMAGE"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ID_CONTEXT_MENU_OPEN_PAGE"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="@dimen/kau_dialog_margin"
        android:text="@string/copy_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ID_CONTEXT_COPY_IMAGE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ID_CONTEXT_MENU_COPY_IMAGE"
        android:layout_marginStart="19dp"
        android:visibility="gone"/>

</RelativeLayout>