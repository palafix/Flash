<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="bottom|center"
    android:orientation="vertical">

    <TextView
    android:id="@+id/txt"
    android:layout_width="189dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:text="@string/dialogfileoicker"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_imagepicker"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="@string/imagepicker"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/txt_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/txt_imagepicker"
        android:layout_marginEnd="-40dp"
        android:layout_toStartOf="@+id/txt_imagepicker"
        android:layout_weight="0.1"
        tools:ignore="ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/txt_videopicker"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txt_imagepicker"
        android:layout_below="@+id/txt_imagepicker"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="@string/videopicker"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/txt_video"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/txt_videopicker"
        android:layout_marginEnd="-40dp"
        android:layout_toStartOf="@+id/txt_imagepicker"
        android:layout_weight="0.1"
        tools:ignore="ObsoleteLayoutParam" />

</RelativeLayout>